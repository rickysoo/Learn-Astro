];
---

<section id="concepts" class="py-20 px-6 bg-slate-50/50 dark:bg-slate-800/50">
  <div class="container mx-auto max-w-7xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-800 dark:text-slate-100 mb-6">
        Learn How Astro Works
      </h2>
      <p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
        Discover the simple ideas that make Astro perfect for building fast websites.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {concepts.map((concept, index) => (
        <div class={`animate-fadeInUp stagger-${index + 1}`}>
          <ConceptCard
            title={concept.title}
            icon={concept.icon}
            description={concept.description}
            benefits={concept.benefits}
            codeExample={concept.codeExample}
          />
        </div>
      ))}
    </div>
  </div>
</section>